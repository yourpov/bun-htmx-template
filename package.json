{
  "name": "bun-htmx-template",
  "version": "1.0.0",
  "description": "A production-ready template for building modern web applications with Bun and HTMX",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "start": "bun src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target bun",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist node_modules"
  },
  "keywords": [
    "bun",
    "htmx",
    "typescript",
    "template",
    "web",
    "server",
    "ssr",
    "hypermedia"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "^1.3.5",
    "typescript": "^5.3.3"
  },
  "dependencies": {},
  "engines": {
    "bun": ">=1.0.0"
  }
}
